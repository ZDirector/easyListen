<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="185dp"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/iv_playlist_detail"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="1dp"
            android:background="@color/mike_white"
            app:layout_constraintBottom_toTopOf="@+id/tv_playlist_detail"
            app:layout_constraintTop_toTopOf="parent"
            />

        <TextView
            app:layout_constraintTop_toBottomOf="@id/iv_playlist_detail"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/tv_playlist_detail"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="8dp"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:text="@string/test" />

    </LinearLayout>
</layout>