<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00000000"
        >


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/control_play"
            android:layout_width="0dp"
            android:layout_height="35dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/shape_oral"
            android:layout_marginHorizontal="15dp"
            app:layout_constraintTop_toTopOf="@+id/rl_control_play"
            app:layout_constraintBottom_toBottomOf="@id/rl_control_play"/>
        <RelativeLayout
            android:id="@+id/rl_control_play"
            android:layout_width="45dp"
            android:layout_height="45dp"
            app:layout_constraintStart_toStartOf="@+id/control_play"
            android:background="@drawable/shape_control_circle"
            app:layout_constraintTop_toTopOf="parent">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:gravity="center|center_horizontal|center_vertical" />

        </RelativeLayout>

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/rl_control_play"
            app:layout_constraintTop_toTopOf="@id/control_play"
            app:layout_constraintBottom_toBottomOf="@+id/control_play"
            android:id="@+id/tv_control_name"
            android:layout_marginStart="10dp"
            android:text="会呼吸的痛"/>

        <ImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:id="@+id/iv_control_more_list"
            app:layout_constraintEnd_toEndOf="@+id/control_play"
            app:layout_constraintTop_toTopOf="@+id/control_play"
            app:layout_constraintBottom_toBottomOf="@+id/control_play"
            android:src="@drawable/ic_control_more_list"
            android:layout_marginEnd="5dp"
            />
        <ImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:id="@+id/iv_control_play"
            app:layout_constraintEnd_toStartOf="@+id/iv_control_more_list"
            app:layout_constraintTop_toTopOf="@+id/control_play"
            app:layout_constraintBottom_toBottomOf="@+id/control_play"
            android:src="@drawable/ic_control_play"

            android:layout_marginEnd="10dp"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>