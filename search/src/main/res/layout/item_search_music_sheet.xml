<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="74dp"
    android:background="@drawable/item_press_color"
    android:clickable="true"
    android:focusable="true">

    <ImageView
        android:id="@+id/item_music_sheet_pic"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_music_sheet_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="40dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/themeColor"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/item_music_sheet_songs_count"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@id/item_music_sheet_pic"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/item_music_sheet_songs_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="4dp"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/item_music_sheet_pic"
        app:layout_constraintTop_toBottomOf="@+id/item_music_sheet_name" />

    <TextView
        android:id="@+id/item_music_sheet_creator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        app:layout_constraintStart_toEndOf="@id/item_music_sheet_songs_count"
        app:layout_constraintTop_toTopOf="@id/item_music_sheet_songs_count" />

    <TextView
        android:id="@+id/item_music_sheet_play_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        app:layout_constraintStart_toEndOf="@id/item_music_sheet_creator"
        app:layout_constraintTop_toTopOf="@id/item_music_sheet_creator" />

</androidx.constraintlayout.widget.ConstraintLayout>