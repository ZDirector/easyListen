<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:background="@drawable/item_press_color">

    <ImageView
        android:id="@+id/item_music_video_cover"
        android:layout_width="140dp"
        android:layout_height="80dp"
        android:layout_marginStart="10dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_music_video_dur"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:shadowColor="#ccc"
        android:shadowDx="0.5"
        android:shadowDy="0.5"
        android:shadowRadius="2"
        app:layout_constraintBottom_toBottomOf="@+id/item_music_video_cover"
        app:layout_constraintEnd_toEndOf="@+id/item_music_video_cover" />

    <TextView
        android:id="@+id/item_music_video_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="2dp"
        android:textColor="@color/black_2e"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@+id/item_music_video_cover"
        app:layout_constraintTop_toTopOf="@+id/item_music_video_cover" />

    <TextView
        android:id="@+id/item_music_video_singer_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:textColor="@color/themeColor"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/item_music_video_name"
        app:layout_constraintTop_toBottomOf="@+id/item_music_video_name" />

    <TextView
        android:id="@+id/item_music_video_play_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="@+id/item_music_video_singer_name"
        app:layout_constraintTop_toBottomOf="@+id/item_music_video_singer_name" />
</androidx.constraintlayout.widget.ConstraintLayout>