<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="44dp">

    <ImageView
        android:id="@+id/item_search_suggest_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="16dp"
        android:src="@drawable/ic_search_icon"/>

    <TextView
        android:id="@+id/item_search_suggest_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:textColor="@color/gray_9f"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/item_search_suggest_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/item_search_suggest_icon"
        app:layout_constraintTop_toTopOf="@+id/item_search_suggest_icon"
        android:layout_marginEnd="10dp"
        android:maxLines="1"/>

    <ImageView
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:src="@color/gray_f3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/item_search_suggest_text"
        app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>